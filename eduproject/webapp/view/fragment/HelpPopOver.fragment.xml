<!-- fragment.xml을 지켜야한다. -->
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<!-- placement 는 popover가 어디로 위치할건지. -->
    <Popover
		id="myPopover"
		title="Test"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="email"
					text="Email"
					press="handleEmailPress" />
			</OverflowToolbar>
		</footer>
		<Title text="Popover Title" />
	</Popover>
</core:FragmentDefinition>
